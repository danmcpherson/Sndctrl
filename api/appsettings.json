{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data/app.db"
  },
  "DataDirectory": "data",
  "SocoCli": {
    "Port": 8000,
    "MacrosFile": "data/macros.txt",
    "UseLocalCache": false
  },
  "IMPORTANT_NOTE": "DataDirectory and SocoCli:MacrosFile must use the same base path to ensure consistency"
}
